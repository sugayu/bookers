
<div class = "edit">
  <h2> Editing Book</h2>
  <%= form_for(@book) do |f| %>
  Title<br>
  <%= f.text_field :title %><br>
  Body<br>
  <%= f.text_area :body %>
  <p> <%= f.submit 'Update Book' %></p>
  <% end %>
  <p><%= link_to "Show", book_path(@book.id) %> | <%= link_to "Back", new_book_path %> </p>
</div>
