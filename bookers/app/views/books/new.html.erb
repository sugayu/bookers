<h1>Books</h1>

<table>
  <tr>
    <th> Title</th>
    <th> Body</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @books.each do |book| %>
  <tr>
    <th> <%= book.title %></th>
    <th> <%= book.body %></th>
    <th> <%= link_to "Show", book_path(book.id) %></th>
    <th> <%= link_to "Edit", edit_book_path(book.id) %></th>
    <th> <%= link_to "Destroy", "/books/#{book.id}", method: :delete, "data-confirm" => "Are you sure?" %></th>
  </tr>
<% end %>

</table>

<!-- form_for部分 -->
<%= form_for(@book) do |f| %>
<h4> Title</h4>
<%= f.text_field :title %>

<h4> body</h4>
<%= f.text_area :body %>
<p> <%= f.submit 'Create Book' %></p>

<% end %>