<div class = "list-table">
  <h2>Books</h2>
  <table>
    <tr>
      <th> Title</th>
      <th> Body</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>

    <% @books.each do |book| %>
    <tr>
      <!-- &emsp;はほぼ全角スペース -->
      <td> <%= book.title %></td>
      <td> <%= book.body %>&emsp;</td>
      <td> <%= link_to "Show", book_path(book.id) %>&emsp;</td>
      <td> <%= link_to "Edit", edit_book_path(book.id) %>&emsp;</td>
      <td> <%= link_to "Destroy", "/books/#{book.id}", method: :delete, "data-confirm" => "Are you sure?" %>&emsp;</td>
    </tr>
    <% end %>
  </table>
</div>

<div class = "new-form">
  <h4> New Book</h4>
  <!-- form_for部分 -->
  <%= form_for(@book) do |f| %>
  <p> Title</p>
  <%= f.text_field :title %>

  <p> body</p>
  <%= f.text_area :body %>
  <p> <%= f.submit 'Create Book' %></p>
</div>
<% end %>